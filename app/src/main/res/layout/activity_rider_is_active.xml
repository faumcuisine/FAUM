<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.faum.faum_rider.Rider_isActive">

    <CheckBox
        android:id="@+id/cbRiderActiveConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="92dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRiderActiveConfirmation"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tvRiderActiveConfirmation"
        android:layout_marginLeft="92dp" />

    <TextView
        android:id="@+id/tvRiderActiveConfirmation"
        android:layout_width="0dp"
        android:layout_height="111dp"
        android:text="Are you ready for work?"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="117dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp" />
</android.support.constraint.ConstraintLayout>
